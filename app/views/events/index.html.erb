<h1>Listing events</h1>

<div class="row">
  <div class="col-lg-2">
    <div class="panel panel-primary" id="panels">
      <div class="panel-heading">Search Tags</div>
      <div>
        <% tag_cloud(Event.tag_counts, %w{css1 css2 css3 css4}) do |tag, css_class| %>
          <%= link_to tag.name, tag_path(tag.name), class: css_class %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-lg-10">
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Start date</th>
          <th>End date</th>
          <th>Location</th>
          <th>Agenda</th>
          <th>Address</th>
          <th>Organizer</th>
          <th>Tags</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.title %></td>
            <td><%= l event.start_date %></td>
            <td><%= l event.end_date %></td>
            <td><%= event.location %></td>
            <td><%= event.agenda %></td>
            <td><%= event.address %></td>
            <td><%= event.organizer.email %></td>
            <td><%= raw(event.all_tags.split(" ").map { |t| link_to t, tag_path(t) }.join(', ')) %></td>

            <td><%= link_to 'Show', event, :class=>"btn btn-primary btn-small" %></td>
            <td><%= link_to 'Edit', edit_event_path(event), :class=>"btn btn-success btn-small" %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger btn-small" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Event', new_event_path %>
  </div>
</div>
  <div class="field">
    <%= f.datetime_select :end_date %>
  </div>
  <div class="field">
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.text_area :agenda %>
  </div>
  <div class="field">
    <%= f.text_area :address %>
  </div>
  <div class="field">
    <%= f.number_field :organizer_id %>
  </div>
  <div class="actions">
    <%= f.submit nil, class: "btn btn-success" %>
